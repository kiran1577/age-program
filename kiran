def age_calc():
	sec_or_years=input("Give me Seconds(s)or years(y)?")
	if sec_or_years == "s":
		# convert seconds to year
		user_value=input("Enter no seconds you lived for: ")
		print("You have lived for {} years".format(round(int(user_value)/60/60/24/365,2)))
	elif sec_or_years == "y":
		# Convert years to seconds
		user_value=input("Enter no of years you lived for: ")
		print("You have live for {} Seconds".format(int(user_value)* 365 * 24 * 60 *60))

